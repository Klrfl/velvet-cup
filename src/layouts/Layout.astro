---
import "@/styles/globals.css"
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>

	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	body {
		display: grid;
		grid-template-rows: max-content auto;
		grid-template-columns: minmax(0, 1fr) repeat(6, 1fr) minmax(0, 1fr);
		gap: 2rem;

		@media screen and (min-width: 768px) {
			grid-template-columns: minmax(0, 1fr) repeat(12, minmax(0, 7rem)) minmax(
					0,
					1fr
				);
			gap: 1rem;
		}
	}
</style>
