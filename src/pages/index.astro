---
import Layout from "../layouts/Layout.astro"
import { db } from "@/database"

const menus = await db.selectFrom("menu").selectAll().execute()
---

<Layout>
	<h1>Hi</h1>
	<p>Products</p>

	<ul>
		{
			menus.map((menu) => (
				<li>
					<a href={`/menu/${menu.id}`}>{menu.name}</a>-
					<span>{menu.description}</span>
				</li>
			))
		}
	</ul>
</Layout>
